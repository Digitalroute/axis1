    </phaseOrder>
    <phaseOrder type="outflow">
        <phase name="global"/>
        <phase name="transport"/>
        <phase name="Logging"/>
        <phase name="service"/>
    </phaseOrder>
    <phaseOrder type="INfaultflow">
        <phase name="global"/>
